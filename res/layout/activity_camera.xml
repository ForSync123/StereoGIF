<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".CameraActivity" >

    <!--
         The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc.
    -->
	<SurfaceView   
        android:id="@+id/sView"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"/>  
    <ImageView
        android:id="@+id/imageView_preview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/contentDescription_picturePreview"
        android:src="@android:drawable/ic_menu_gallery" 
        android:visibility="invisible"/>

    <!--
         This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows.
    -->

    <FrameLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true" >

        
        
        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="@color/transparent"
            android:orientation="horizontal"
            tools:ignore="UselessParent" >

            <TextView
                android:id="@+id/textView_photoCount"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:text="0" />
            
            <ImageButton
                android:id="@+id/button_capture"
                android:background="@color/transparent"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:src="@drawable/button_capture"
                android:contentDescription="@string/button_capture"
                android:text="@string/button_capture" 
                android:layout_weight="0.9"/>

            <Button
                style="@style/ButtonBarButton"
                android:id="@+id/button_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@drawable/button_buttombar"
                android:text="@string/button_next" />

        </LinearLayout>
    </FrameLayout>

</FrameLayout>
